<div class="container">
  <div class="card">
     <div class="card__image-container">
       <img class="card__image" src="{{adventure.image}}" alt="">
    </div>
    
     <div class="card__content">
       <h1 class="card__title">{{adventure.name}}</h1>
     <p>{{adventure.description}}</p>
     <p class="price">Price: {{adventure.price}}</p>
     <a href="/adventures/join/{{adventure._id}}">Join</a>
    </div>
  </div>
</div>